@model User

<form asp-controller="User" asp-action="UpdateUser">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <input asp-for="@Model.UserName" class="form-control" type="text">
    </div>

    <button type="submit" class="btn btn-primary">Send</button>
</form>